@model IEnumerable<FormDeneme.Models.Form>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    @*<a asp-controller="Forms" asp-action="Create" type="button" class="btn btn-primary">Yeni Form Oluştur</a>*@
    <div style="display: flex; justify-content: space-between; margin-bottom:2rem;">
        <button class="btn btn-primary" id="btnAddForm" data-toggle="modal">Yeni Form Oluştur</button>
    <form asp-controller="Home" asp-action="Index">
        <input type="value" placeholder="Ara..." name="search" value="@ViewData["Search"]" />
         <input class="sub " type="submit" value="Search" />
    </form>
    </div>
    
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CreatedAt
            </td>
            <td>
                <div style="display: flex; justify-content: space-evenly;">
                <a asp-controller="Forms" asp-action="Fields" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Veri Girişi Yap</a> |
                <a asp-controller="Forms" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                <a asp-controller="Forms" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a> |
                <a asp-controller="Forms" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="madal fade modal" id="FormModal" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Yeni Form Oluştur</h1>
                <button class="btn-close text-danger" data-dismiss="modal" id="btnClose" ></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Adınızı Girin" class="form-control" id="Name" autocomplete="off" required/>
                    </div>
                     <div class="form-group">
                        <label>Description</label>
                        <input type="text"  placeholder="Açıklama Girin" class="form-control" id="Description" autocomplete="off" required/>
                    </div>
                     <div class="form-group">
                        <label>CreadAt</label>
                        <input type="date" placeholder="Tarih Girin" class="form-control" id="CreatedAt" autocomplete="off" required/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddForm()" id="AddForm">Kaydet</button>
                <button class="btn btn-danger btn-default"  data-dismiss="modal" id="btnClosee">Çıkış</button>
            </div>
        </div>
    </div>
</div>
</div>
